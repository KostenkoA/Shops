{% extends 'base.html.twig' %}

{% block mainContent %}
    <div>
        <div class='basket'>
            {% for basketProduct in basketList %}
            <div class='product_list_row row'>
                <div class='product_photo col'>
                    <img src='{{ basketProduct.image }}'/>
                </div>
                <div class='product_name col'>
                    <a href="{{ path('product_preview', {'id': basketProduct.id}) }}">{{ basketProduct.name }}</a>
                </div>
                <div class='product_comment col'>
                    {{ basketProduct.comment }}
                </div>
                <div class='product_price col'>
                    {{ basketProduct.price }} $
                </div>
                <div class='product_price col'>
                    <a href="#">Delete</a>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class='basket_total'>
            <h1>Basket</h1>
            <h2>Your choise:</h2>
            <b>Total: {{ sum }} $</b>
        </div>
    </div>

{% endblock %}